{
  "environment": {
    "name": "CryptoTradingEnv",
    "version": "1.0.0",
    "description": "Gymnasium-compatible trading environment for cryptocurrency DRL agents"
  },

  "data": {
    "symbol": "BTCUSDT",
    "timeframe": "1d",
    "source": "binance",
    "train_split": 0.7,
    "val_split": 0.15,
    "test_split": 0.15
  },

  "trading": {
    "initial_balance": 10000.0,
    "max_position_size": 1.0,
    "allow_short": false,
    "leverage": 1.0
  },

  "fees": {
    "maker": 0.0001,
    "taker": 0.001,
    "slippage": 0.0005
  },

  "reward": {
    "type": "risk_adjusted",
    "parameters": {
      "turnover_penalty": 0.0001,
      "drawdown_penalty": 0.001,
      "scaling": 1.0
    }
  },

  "action_space": {
    "type": "discrete",
    "actions": ["hold", "buy", "sell"]
  },

  "observation": {
    "window_size": 50,
    "features": [
      "ohlcv",
      "technical_indicators",
      "position_state",
      "portfolio_metrics"
    ]
  },

  "technical_indicators": {
    "sma": [7, 14, 21, 50, 100, 200],
    "ema": [7, 14, 21],
    "rsi": [14],
    "macd": {
      "fast": 12,
      "slow": 26,
      "signal": 9
    },
    "bollinger_bands": {
      "period": 20,
      "std_dev": 2.0
    },
    "atr": [14]
  },

  "episode": {
    "max_steps": null,
    "termination_conditions": {
      "bankruptcy": {
        "enabled": true,
        "threshold": 0.1
      },
      "max_drawdown": {
        "enabled": false,
        "threshold": -0.5
      }
    }
  },

  "training": {
    "algorithm": "PPO",
    "total_timesteps": 100000,
    "learning_rate": 0.0003,
    "n_envs": 4,
    "eval_freq": 10000
  },

  "logging": {
    "enabled": true,
    "level": "INFO",
    "save_dir": "logs",
    "log_frequency": 100
  },

  "visualization": {
    "render_mode": "human",
    "save_plots": true,
    "plots_dir": "plots"
  },

  "random_seed": 42
}
