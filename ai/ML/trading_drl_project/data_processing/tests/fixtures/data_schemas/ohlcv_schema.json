{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://trading-drl.com/schemas/ohlcv.json",
  "title": "OHLCV Data Schema",
  "description": "Schema for OHLCV (Open, High, Low, Close, Volume) market data",
  "type": "object",
  "properties": {
    "symbol": {
      "type": "string",
      "description": "Trading pair symbol (e.g., BTC/USDT)",
      "pattern": "^[A-Z]{2,10}/[A-Z]{2,10}$"
    },
    "timeframe": {
      "type": "string",
      "description": "Data timeframe",
      "enum": ["1m", "5m", "15m", "30m", "1h", "4h", "1d", "1w", "1M"]
    },
    "data": {
      "type": "array",
      "description": "Array of OHLCV candles",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "description": "ISO 8601 timestamp",
            "format": "date-time"
          },
          "open": {
            "type": "number",
            "description": "Opening price",
            "minimum": 0
          },
          "high": {
            "type": "number",
            "description": "Highest price",
            "minimum": 0
          },
          "low": {
            "type": "number",
            "description": "Lowest price",
            "minimum": 0
          },
          "close": {
            "type": "number",
            "description": "Closing price",
            "minimum": 0
          },
          "volume": {
            "type": "number",
            "description": "Trading volume",
            "minimum": 0
          }
        },
        "required": ["timestamp", "open", "high", "low", "close", "volume"],
        "additionalProperties": false
      },
      "minItems": 1
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "properties": {
        "exchange": {
          "type": "string",
          "description": "Exchange name"
        },
        "source": {
          "type": "string",
          "description": "Data source"
        },
        "updated_at": {
          "type": "string",
          "description": "Last update timestamp",
          "format": "date-time"
        },
        "version": {
          "type": "string",
          "description": "Schema version",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        }
      },
      "additionalProperties": true
    }
  },
  "required": ["symbol", "timeframe", "data"],
  "additionalProperties": false
}