# ========================================
# БРАУЗЕРНИЙ БОТ НАЛАШТУВАННЯ
# ========================================

# Проксі налаштування (ОБОВ'ЯЗКОВО для production)
PROXY_1=http://username:password@proxy1.example.com:8080
PROXY_2=http://username:password@proxy2.example.com:8080
PROXY_3=http://username:password@proxy3.example.com:8080

# Додаткові проксі (опціонально)
PROXY_4=http://username:password@proxy4.example.com:8080
PROXY_5=http://username:password@proxy5.example.com:8080

# Налаштування проксі аутентифікації
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# Налаштування браузера
HEADLESS=true
DEVTOOLS=false
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Затримки (в мілісекундах)
MIN_DELAY=3000
MAX_DELAY=7000
MOUSE_DELAY_MIN=100
MOUSE_DELAY_MAX=500

# Інтервали запуску
RUN_INTERVAL=30
SCHEDULED=false

# Логування
LOG_TO_FILE=true
LOG_LEVEL=info

# Binance облікові дані
BINANCE_EMAIL=your_email@example.com
BINANCE_PASSWORD=your_secure_password

# Торгові налаштування (почніть з малих сум!)
FROM_CURRENCY=USDT
TO_CURRENCY=BTC
TRADE_AMOUNT=10

# Антикапча налаштування (опціонально)
ANTICAPTCHA_API_KEY=your_anticaptcha_key
TWOCAPTCHA_API_KEY=your_2captcha_key

# Моніторинг та сповіщення
WEBHOOK_URL=https://hooks.slack.com/your-webhook
ENABLE_NOTIFICATIONS=false

# ========================================
# Cloud та Production налаштування
# ========================================

# Render.com / Railway налаштування
NODE_ENV=production
PORT=3000

# Таймзона
TZ=UTC